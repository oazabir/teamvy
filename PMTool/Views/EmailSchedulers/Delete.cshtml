@model PMTool.Models.EmailScheduler

@{
    ViewBag.Title = "Delete";
}

<div class="pagetitle">
    <h1>Delete Schedule
    </h1>
    <span>Are you sure you want to delete this?</span>
</div>

@using (Html.BeginForm())
{
    <table class="table table-bordered table-invoice">
        <tbody>
            <tr>
                <td class="width30">Schedule Title
                </td>
                <td>
                      @Model.SchedulerTitles.FirstOrDefault().Text 
                </td>
            </tr>
            <tr>
                <td class="width30">Schedule Type
                </td>
                <td>
                    @Model.ScheduleType.FirstOrDefault().Text
                </td>
            </tr>

            <tr>
                <td class="width30">Schedule Time
                </td>
                <td>
                    @Model.ScheduledTime
                </td>
            </tr>

            <tr>
                <td class="width30"></td>
                <td>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </td>
            </tr>
        </tbody>
    </table>
    <p>
      @* @Html.ActionLink("Back to List", "ProjectTasks", "Tasks", new { @ProjectID=Model.ProjectID}, new { @class = "btn" })*@
    </p>
}



