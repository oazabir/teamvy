@using (Ajax.BeginForm("_Search", "Tasks", new AjaxOptions { UpdateTargetId = "dyntable5", OnBegin = "Loading()", OnComplete = "Unload()" }))
{
    <input type="hidden" name ="SelectedProjectID" value ="@ViewBag.CurrentProjectId" />
    <div>
        <table class="table table-bordered table-invoice">
            <tr>
                <td>Status</td>
                <td>
                    @Html.DropDownListFor(model => model.SelectedStatusID, (Model.statusList).Select(option => new SelectListItem
                     {
                         Text = (option == null ? "None" : option.Name),
                         Value = option.ProjectStatusID.ToString(),
                         Selected = (Model != null) && (option.ProjectStatusID == Model.SelectedStatusID)
                     }), "Choose...")

                </td>
