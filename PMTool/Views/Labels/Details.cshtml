@model PMTool.Models.Label

@{
    ViewBag.Title = "Details | Label";
}

<div class="pagetitle">
    <h1>
        Label Details
    </h1>
    <span>Label details below....</span>
</div>
<table class="table table-bordered table-invoice">
    <tbody>
        <tr>
            <td class="width30">
                Name
            </td>
            <td>
                @Model.Name
            </td>
        </tr>
        <tr>
            <td class="width30">
                Description
            </td>
            <td>
                @Html.DisplayTextFor(_ => Model.Description).ToString()
            </td>
        </tr>
        <tr>
            <td class="width30">
                Is Active
            </td>
            <td>
                @Html.DisplayTextFor(_ => Model.IsActive).ToString()
            </td>
        </tr>
    </tbody>
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.LabelID }, new { @class = "btn btn-primary" })
    |
    @Html.ActionLink("Back to List", "Index","Labels", "",new { @class="btn"})
</p>


