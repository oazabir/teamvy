@model IEnumerable<PMTool.Models.Task>

@{
    ViewBag.Title = "Home Page";
}


<script type="text/javascript">
    function ShowEffortEntryForm(taskId) {

        var url = jQuery('#divPopupEffortEntry').data('url') + "/" + taskId;
        //alert(url);

        jQuery.ajax({
            url: url,
            //async: false,
            cache: false,
            beforeSend: function () {
                jQuery("#ModalLoading").modal('show');
            },
            success: function (data) {
                //alert("Success..");
                jQuery('#divPopupEffortEntryContainer').html(data);
                jQuery("#ModalLoading").modal('hide');
                jQuery("#divPopupEffortEntry").detach().appendTo("body");
                jQuery("#divPopupEffortEntry").modal('show');
            },
            error: function (error) {
                jQuery.jGrowl('somethig is wrong', { life: 5000 });
            }
        });
        //alert("Working..");
        return false;
    }

    function ShowEffortEntry(taskId) {

        var url = jQuery('#divPopupEffortEntry').data('url') + "/" + taskId;
        //alert(url);

        jQuery.ajax({
            url: url,
