                //alert("Success..");
                jQuery('#divPopupEffortEntryContainer').html(data);
                jQuery("#ModalLoading").modal('hide');
                jQuery("#divPopupEffortEntry").detach().appendTo("body");
                jQuery("#divPopupEffortEntry").modal('show');
            },
            error: function (error) {
                jQuery.jGrowl('somethig is wrong', { life: 5000 });
            }
        });
        //alert("Working..");
        return false;
    }


</script>



