

@{
    ViewBag.Title = "Search result | Project";
}

<div class="pagetitle">
    <h1>Project List</h1>
    <span>List of Projects....</span>
</div>
@if (TempData["PossibleProjects"] == null)
{
    TempData["PossibleProjects"] = new List<PMTool.Models.Project>();
}
<table class="table table-bordered" id="dyntable">
    <thead>
        <tr>
            <th>Project Name
            </th>
            <th>Is Locked</th>

            <th>Is Active
            </th>
            <th>Add Tasks
            </th>
            <th>Show Tasks
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in (List<PMTool.Models.Project>)TempData["PossibleProjects"])
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                   @Html.DisplayTextFor(_ =>item.IsLocked).ToString()
                </td>

                <td>
                    @Html.DisplayTextFor(_ => item.IsActive).ToString()
                </td>
                <td>
                    @Html.ActionLink("Add Tasks", "Create","Tasks", new { ProjectID = item.ProjectID }, new { @title = "Show Tasks" })
                </td>
                <td>
                    @Html.ActionLink("Show Tasks", "ProjectTasks","Tasks", new { ProjectID = item.ProjectID }, new { @title = "Show Tasks" })
                </td>
                <td align="center">
                    @Html.ActionLink(" ", "Details", new { id = item.ProjectID }, new { @class = "icon-list-alt", @title = "Details" })
                </td>
            </tr>
        }
    </tbody>

</table>